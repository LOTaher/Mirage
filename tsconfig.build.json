{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "palm/*.ts",
    "palm/*.tsx",
    "wave/*.ts",
    "wave/*.tsx",
    "gobi/*.ts",
    "gobi/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "palm/*.js",
    "palm/*.jsx",
    "wave/*.js",
    "wave/*.jsx"
  ]
}
